<form action="/trainers/<%= @trainers.id %>" method="post">

  <label for="brand">Brand:</label>
  <select name="brand_id" id="brand">

  <% for brand in @brands %>
    <option value="<%= brand.id %>"
    <%= "selected" if @trainers.brand.name == brand.name %>
    ><%= brand.name %></option>
  <% end %>
  </select>

  <br>
  <label for="trainer-name-field">Trainer Name:</label>
  <input type="text" name="trainer_name" id="trainer-name-field" value="<%= @trainers.trainer_name %>"/>
  <br>
  <label for="description-field">Description:</label>
  <input type="text" name="description" id="description-field" value="<%= @trainers.description %>"/>
  <br>
  <label for="quantity-field">Quantity</label>
  <input type="number" name="quantity" id="quantity-field" value="<%= @trainers.quantity %>"/>
  <br>
  <label for="buy-cost-field">Buy Cost</label>
  <input type="number" name="buy_cost" id="buy-cost-field" value="<%= @trainers.buy_cost  %>"/>
  <br>
  <label for="sell-price-field">Sell Price</label>
  <input type="number" name="sell_price" id="sell-price-field" value="<%= @trainers.sell_price %>"/>
  <br>
  <input type="submit" value="Edit Trainers"/>
</form>
